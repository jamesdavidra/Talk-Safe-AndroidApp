<ButtonWindow>
    MDGridLayout:
        cols:1

        BoxLayout:
            size_hint: 1, None
            height: "0dp"
        MDToolbar:
            title: 'Talk Safe'
            height: 45
            elevation: 10

        MDGridLayout:
            cols:2

            Button
                text: "Add Keyword"
                on_press: app.change_screen("add_keyword", 'left')


            Button
                text: "Location"
                on_press: app.change_screen("map_view_user", 'left')


            Button
                text: "Add Contacts"
                on_press: app.change_screen("add_contact", 'left')

            MDGridLayout:
                rows: 2
                cols: 1


                MDLabel
                    background_color: 0, 0.3, 0, 1
                    text: "Find Me"
                    halign: 'center'
                Switch
                    active: False
                    on_active: root.switch_click(self.active)



            Button
                text: "Register Voice"

            ToggleButton
                id: btn_act
                background_color: 0, 0.5, 0.2, 1
                text: "Activate"
                on_state: root.act_btn(self)

<AddContact>
    GridLayout:
        cols: 1
        MDToolbar:
            title: 'Add Contact'
            left_action_items: [["home", lambda x: app.change_screen("button_window", 'right')]]
            height: 45
            elevation: 12

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {'center_x': .5, 'center_y': .5}
        padding: 50
        spacing: 50
        elevation: 10
        orientation: 'vertical'

        MDTextFieldRound:
            id: name
            size_hint_x: .5
            width: "250dp"
            font_size: 12
            icon_right: "account"
            hint_text: "Full Name"
            required: True
            helper_text_mode: "on_error"
            helper_text: "Enter full name"
            pos_hint: {'center_x': .5}

        MDTextFieldRound:
            id: email
            size_hint_x: .5
            width: "250dp"
            font_size: 12
            icon_right: "email"
            hint_text: "Email Address"
            required: True
            helper_text_mode: "on_error"
            helper_text: "Enter email address"
            pos_hint: {'center_x': .5}


        MDTextFieldRound:
            id: number
            size_hint_x: .5
            width: "250dp"
            font_size: 12
            hint_text: "Phone Number"
            required: True
            helper_text_mode: "on_error"
            helper_text: "Enter phone number"
            max_text_length: 11
            pos_hint: {'center_x': .5}

        MDFillRoundFlatButton:
            text: "Save"
            font_size: "12sp"
            pos_hint: {"center_x": .5}
            on_press: root.save()

        MDLabel:
            id: fields_required
            size_hint_x: .5
            width: "250dp"
            font_size: 10
            text: ""
            halign: "center"
            pos_hint: {"center_x": .5}
